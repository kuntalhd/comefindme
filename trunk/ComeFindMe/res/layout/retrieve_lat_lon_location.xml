<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:padding="10dip">

	<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Enter Latitude &amp; Longitude" />

	<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Latitude:" />

	<EditText android:id="@+id/latitudeField" android:layout_width="fill_parent" android:layout_height="wrap_content" />

	<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Longitude:" />

	<EditText android:id="@+id/longitudeField" android:layout_width="fill_parent" android:layout_height="wrap_content" />

	<LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="right">

		<Button android:id="@+id/sendBtn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Send" />

	</LinearLayout>

</LinearLayout>


